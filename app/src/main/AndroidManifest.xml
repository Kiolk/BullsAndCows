<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.notepad.bullsandcows"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/bullgood"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bullgood"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashStart">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
        </activity>
        <activity
            android:name=".Rulespage"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat.Dialog"/>
        <activity
            android:name=".Setting"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat.Dialog"/>
        <activity
            android:name=".About"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat.Dialog"/>
        <activity
            android:name=".Records"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat">
        </activity>
        <activity
            android:name=".Welcome"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat.Dialog.Alert">
        </activity>
        <activity
            android:name=".OnlineRecords"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat">
        </activity>

        <service android:name=".services.WinSoundService">
        </service>
        <service android:name=".services.RefreshOnlineRecordService">

        </service>
        <activity android:name=".RegistrationPage">
        </activity>
    </application>

</manifest>