<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.notepad.bullsandcows.OnlineRecords">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/upper_title_coded_number_online_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/title_color"
            android:gravity="center"
            android:text="@string/coded_number"
            android:textColor="@color/color_for_text"/>

        <TextView
            android:id="@+id/upper_title_date_of_won_online_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="3"
            android:background="@color/title_color"
            android:gravity="center"
            android:text="@string/date_title"
            android:textColor="@color/color_for_text"/>

        <TextView
            android:id="@+id/upper_title_nik_name_online_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@color/title_color"
            android:gravity="center"
            android:text="@string/nik_name_title"
            android:textColor="@color/color_for_text"/>

        <TextView
            android:id="@+id/upper_title_moves_for_won_online_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/title_color"
            android:gravity="center"
            android:text="@string/moves_title"
            android:textColor="@color/color_for_text"/>

        <TextView
            android:id="@+id/upper_title_need_time_for_won_online_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/title_color"
            android:gravity="center"
            android:text="@string/time_title"
            android:textColor="@color/color_for_text"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="19"
        android:orientation="vertical">

        <ListView
            android:id="@+id/list_of_record_online_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

        </ListView>



        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:gravity="center"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <Button
            android:id="@+id/refresh_records_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/REFRESH_RECORDS"
            android:padding="4dp"/>
    </LinearLayout>

</LinearLayout>
