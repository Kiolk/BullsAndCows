<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/connection_to_online_image_view"
        style="@style/upper_bar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@android:color/holo_red_dark"
        android:src="@android:drawable/stat_notify_sync"
        />

    <TextView
        android:id="@+id/language_cod_text_view"
        style="@style/upper_bar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="@string/LANGUAGE_COD"
        android:clickable="true"/>

    <TextView
        android:id="@+id/user_name_text_view"
        style="@style/upper_bar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:hint="@string/SET_YOUR_NAME_HINT"/>



    <ImageView
        android:id="@+id/option_menu_image_view"
        style="@style/upper_bar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_manage"/>


</LinearLayout>
