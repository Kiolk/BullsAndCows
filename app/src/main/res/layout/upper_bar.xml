<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:showIn="@layout/activity_main"
    android:elevation="4dp"
    android:background="@drawable/BACKGROUND_COLOR_BUTTON">

    <ImageView
        android:id="@+id/photo_user_bar_image_view"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="2dp"
        android:layout_gravity="bottom"
        tools:src="@android:drawable/stat_notify_sync" />

    <TextView
        android:id="@+id/nik_user_bar_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:maxLength="13"
        android:textSize="24sp"
        android:layout_toEndOf="@+id/photo_user_bar_image_view"
        tools:text="Kolydfdfdfdfdfddfdddddfdfa"/>

    <TextView
        android:id="@+id/timer_text_view"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/MING_COLOR"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:layout_alignParentEnd="true"
        tools:text="00:23" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:hint="@string/SET_YOUR_NAME_HINT"/>


        <TextView
            android:id="@+id/rating_title_bar_text_vie"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/DAY_RAITING"
            android:gravity="bottom"
            android:paddingStart="6dp"
            android:paddingEnd="4dp"
            android:textSize="16sp"
            android:layout_margin="2sp"
            android:background="@android:color/holo_orange_dark"/>

        <TextView
            android:id="@+id/coded_title_user_bar_text_vie"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/CODED"
            android:gravity="bottom"
            android:paddingStart="6dp"
            android:paddingEnd="4dp"
            android:textSize="16sp"
            android:layout_margin="2sp"
            android:background="@android:color/holo_red_dark"/>
    </LinearLayout>

    <TextView
        android:id="@+id/day_rating_user_bar_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:paddingStart="6dp"
        android:paddingEnd="4dp"
        android:textSize="24sp"
        android:layout_margin="2sp"
        android:layout_toStartOf="@id/timer_text_view"
        android:background="@android:color/holo_orange_dark"
        tools:text="4"/>
</RelativeLayout>
