<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/list_record_linear_layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/coded_number_text_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/date_of_won_text_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="3"/>

    <TextView
        android:id="@+id/nik_name_text_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/moves_for_won_text_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/need_time_for_won_text_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"/>

</LinearLayout>
