<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.notepad.bullsandcows.Records">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/upper_title_coded_number_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/title_color"
            android:gravity="center"
            android:text="@string/coded_number"
            android:textColor="@color/color_for_text"/>

        <TextView
            android:id="@+id/upper_title_date_of_won_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="3"
            android:background="@color/title_color"
            android:gravity="center"
            android:text="@string/date_title"
            android:textColor="@color/color_for_text"/>

        <TextView
            android:id="@+id/upper_title_nik_name_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@color/title_color"
            android:gravity="center"
            android:text="@string/nik_name_title"
            android:textColor="@color/color_for_text"/>

        <TextView
            android:id="@+id/upper_title_moves_for_won_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/title_color"
            android:gravity="center"
            android:text="@string/moves_title"
            android:textColor="@color/color_for_text"/>

        <TextView
            android:id="@+id/upper_title_need_time_for_won_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/title_color"
            android:gravity="center"
            android:text="@string/time_title"
            android:textColor="@color/color_for_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="19"
        android:orientation="vertical">

        <ListView
            android:id="@+id/list_of_record_list_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></ListView>
    </LinearLayout>

    <TextView
        android:id="@+id/records_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:textSize="48sp"/>

</LinearLayout>
