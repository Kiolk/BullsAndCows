<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:background="@drawable/my_rect">

    <TextView
        android:id="@+id/cnt_move_list_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textColor="@android:color/black"
        android:textSize="40sp"/>

    <TextView
        android:id="@+id/number_list_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="40sp"/>

    <TextView
        android:id="@+id/bulls_list_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:textSize="40sp"/>

    <ImageView
        android:id="@+id/bull_image_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/bullgood"/>

    <TextView
        android:id="@+id/cows_list_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:textSize="40sp"/>

    <ImageView
        android:id="@+id/cows_image_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/cow_good"/>

</LinearLayout>
