<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/DARK_BACKGROUND_COLOR"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/start_splash_text_view"
            style="@style/SplashTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/START_SPLASH_2_TEXT_VIEW"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/image_splash_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bull_splash_image_view"
            android:layout_width="@dimen/SMALL_WIDTH_IMAGE"
            android:layout_height="@dimen/HEIGHT_IMAGE"
            android:contentDescription="@string/BULL"
            android:cropToPadding="true"
            android:src="@drawable/ic_bull_big_size"/>

        <ImageView
            android:id="@+id/cow_splash_image_view"
            android:layout_width="@dimen/SMALL_WIDTH_IMAGE"
            android:layout_height="@dimen/HEIGHT_IMAGE"
            android:contentDescription="@string/COW"
            android:scaleType="centerInside"
            android:src="@drawable/ic_cow_big_size"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:gravity="center"
        android:visibility="invisible">

        <ProgressBar
            android:id="@+id/splash_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/name_of_game_text_view"
            style="@style/SplashTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/START_SPLASH_TEXT_VIEW"/>
    </LinearLayout>
</LinearLayout>
