<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/background_picture_image_view"
        android:scaleType="centerCrop"
        android:contentDescription="@string/ABOUT_APP"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/layout_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_main"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_game_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_tool_bar"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/numbers_relative_layout"
            style="@style/ShadowOfBlock"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5">

            <include layout="@layout/result_bar"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/input_number_linear_layout"
            style="@style/ShadowOfBlock"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone">


            <include layout="@layout/input_number_bar"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttons_block_linear_layout"
            style="@style/ShadowOfBlock"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:visibility="gone">

            <include layout="@layout/buttons_bar"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/start_game_text_view"
        style="@style/RoundedButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/left_rounded_button"
        android:layout_below="@id/layout_tool_bar"
        android:onClick="onClickButton"
        android:text="@string/START_GAME"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/daily_rating_position_text_view"
        style="@style/RoundedButtonStyle.Small"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coded_title_user_bar_text_vie"
        android:background="@drawable/right_rounded_button"
        tools:text="5"/>

    <TextView
        android:id="@+id/actual_rating_position_text_view"
        style="@style/RoundedButtonStyle.Small"
        android:layout_height="wrap_content"
        android:layout_below="@+id/daily_rating_position_text_view"
        android:background="@drawable/right_rounded_button"
        tools:text="5"/>

    <TextView
        android:id="@+id/coded_title_user_bar_text_vie"
        style="@style/RoundedButtonStyle.Small"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_text_view"
        android:background="@drawable/right_rounded_button"
        tools:text="4"/>

    <TextView
        android:id="@+id/time_text_view"
        style="@style/RoundedButtonStyle.Normal"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/start_game_text_view"
        android:layout_below="@+id/layout_tool_bar"
        android:background="@drawable/right_rounded_button"
        android:gravity="center"
        android:text="@string/START_TIMER"
        tools:text="00:23"/>

    <FrameLayout
        android:id="@+id/for_fragments_in_main_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elevation="@dimen/MIDDLE_ELEVATION"
        android:layout_below="@+id/layout_tool_bar">
    </FrameLayout>
</RelativeLayout>

