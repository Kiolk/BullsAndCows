<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LIGHT_GREY"
    android:orientation="vertical"

    tools:context=".ui.activity.activities.RegistrationPageActivity">

    <include layout="@layout/registration_page_information" />

    <include layout="@layout/registration_page_name_block" />

    <include layout="@layout/registration_page_photo_block" />

    <include layout="@layout/registration_page_age_block" />

    <include layout="@layout/registration_page_description_block" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/registration_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/NEW_USER" />
    </LinearLayout>
</LinearLayout>
