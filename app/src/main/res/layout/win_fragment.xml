<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/win_background_color">

    <TextView
        android:id="@+id/win_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/WIN_MASSAGE"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bullgood"
        android:id="@+id/imageView2"
        android:layout_below="@+id/win_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/win_result_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/WIN_RESULT_MASSAGE"
        android:textSize="20sp"
        android:layout_below="@+id/win_text_view"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"/>

</RelativeLayout>
